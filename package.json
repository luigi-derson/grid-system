{
  "name": "grid-system",
  "version": "1.0.0",
  "description": "Grid system built in scss",
  "main": "index.js",
  "author": "Luigi Derson",
  "license": "MIT",
  "scripts": {
    "dev": "yarn css -w & yarn serve",
    "serve": "live-server . --port=3000 --browser=firefox-developer-edition --open=./demo --ignore=.cache,scss,node_modules",
    "css": "node-sass scss/css-grid/index.scss dist/css-grid.css",
    "css:alt": "node-sass scss/alt-flex-grid/main.scss dist/alt-grid.css",
    "css-lint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd"
  },
  "dependencies": {
    "node-sass": "^5.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0"
  }
}
